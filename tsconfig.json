{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@environments/*": ["src/environments/*"]
    }
  }
}
